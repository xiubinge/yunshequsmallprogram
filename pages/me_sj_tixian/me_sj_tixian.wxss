/* pages/me_sj_tixian/me_sj_tixian.wxss */
page{
    padding-bottom: 40rpx;
    box-sizing:border-box;
}
.sj_header{
    width:100%;
    height: 280rpx;
    background-color: #fff;
    position: relative;
}
.sj_h_in{
    width:100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    
    padding:0 30rpx;
    box-sizing:border-box;
}
.sj_header_img{
    padding-top: 60rpx;
    box-sizing:border-box;
    text-align: center;
    z-index: 11;
}
.sj_header_img image{
    display: inline-block;
    width:90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
    border:2rpx solid #fff;
    overflow: hidden;
}
.sj_bg{
    width:120%;
    height: 200rpx;
    border-radius: 100%;
    background-color: #fe7a7a;
    position: absolute;
    top:-100rpx;
    left: -10%;
}
.sj_name{
    text-align: center;
    font-size: 32rpx;
    color:#333;
    margin-top: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.sj_tixian{
    text-align: center;
    font-size: 26rpx;
    color:#999;
    margin-top: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.lei{
    display: inline-block;
    color:#fe7a7a;
}
.tx_con{
    width:100%;
    height: auto;
    padding:42rpx 94rpx;
    box-sizing:border-box;
    background-color: #fff;
}
.tx_inputIn{
    width:100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 28rpx;
    border-radius: 10rpx;
    border:1rpx solid #eee;
    font-family: "微软雅黑";
}
.tx_but{
    width:100%;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 10rpx;
    background-color: #fe7a7a;
    color:#fff;
    text-align: center;
    font-size: 32rpx;
    margin-top: 50rpx;
}
.tx_txt{
    padding:30rpx;
    box-sizing:border-box;
    color:#999;
    font-size: 24rpx;
    line-height: 40rpx;
}