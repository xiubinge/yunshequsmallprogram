<view class="f_type">
  <view class="type_title">选择分类</view>
  <view class="type_t">
    <view class="f_btn active">全部</view>
    <view class="f_btn">多肉</view>
    <view class="f_btn">绿植</view>
    <view class="f_btn">鲜花</view>
    <view class="f_btn">盆栽</view>
    <view class="f_btn">树苗</view>
    <view class="f_btn">种子</view>
    <view class="f_btn">苔藓</view>
  </view>
</view>

<!--视频弹窗-->
<view class="black" style="display:none">
  <view class="blackIn">
    <view class="white">
      <view class="w_title">
        <view class="w_left">
          <button class="btn w_cell" plain>取消</button>
        </view>
        <view class="w_right">
          <button class="btn w_sure" plain>发表</button>
        </view>
      </view>
      <view class="w_center">
        <view class="w_txt">
          <view class="w_txt_tit">网络视频地址：</view>
          <textarea placeholder="粘贴视频地址到此处，目前支持腾讯视频" class="txt_w" maxlength="-1" />
        </view>
      </view>
      <view class="w_bottom">
        <button plain class="w_btn">+添加本地视频</button>
      </view>
    </view>
  </view>
</view>

<!--打赏弹窗-->
<view class="sh_black" style="display:none">
  <view class="sh_in">
    <view class="sh_white">
      <view class="sh_title">请输入悬赏金额</view>
      <view class="sh_shang">
        <input placeholder="1-99元" class="sh_input" placeholder-style="color:#ccc;" type="number" />
      </view>
      <view class="sh_txt">请在7天内选择一条回复作为最佳答案，逾期未 设置赏金将自动支付给第一条回复的用户</view>
      <view class="sh_btn">
        <button class="s_btn s_cell" plain>取消</button>
        <button class="s_btn s_sure" plain>确定</button>
      </view>
    </view>
  </view>
</view>

<!--语音弹框开始-->
<view class="yu_black" style="display:none">
  <view class="yu_in">
    <view class="yu_white">
      <view class="w_title">
        <view class="w_left">
          <button class="btn w_cell" plain>重新录制</button>
        </view>
        <view class="w_right">
          <button class="btn w_sure" plain>完成</button>
        </view>
      </view>
      <view class="yu_center">
        <view class="yu_tit">点击开始录音</view>
        <view class="yu_star">
          <image src="../../images/fatie/08.png" class="yu_star_img"></image>
        </view>
      </view>
      <view class="w_bottom">
        <button plain class="w_btn">
          <image src="../../images/fatie/09.png" class="upload"></image>
          上传本地音频
        </button>
      </view>
    </view>
  </view>
</view>

<!--语音弹框录音中-->
<view class="yu_black" style="display:none">
  <view class="yu_in">
    <view class="yu_white">
      <view class="w_title">
        <view class="w_left">
          <button class="btn w_cell" plain>重新录制</button>
        </view>
        <view class="w_right">
          <button class="btn w_sure" plain>完成</button>
        </view>
      </view>
      <view class="yu_center">
        <view class="yu_tit">
          <view class="Img_ing">
            <image src="../../images/fatie/left.gif"></image>
          </view>
          <view class="yu_time">0:52</view>
          <view class="Img_ing">
            <image src="../../images/fatie/right.gif"></image>
          </view>
        </view>
        <view class="yu_star">
          <image src="../../images/fatie/10.png" class="yu_star_img ing"></image>
        </view>
        <view class="yu_txt">正在录音，点击停止录音</view>
      </view>
    </view>
  </view>
</view>

