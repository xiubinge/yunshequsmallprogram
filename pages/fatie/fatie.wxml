    <view class="img_v img">
      <image src="../../images/fatie/sa-1.png" class="sa"></image>
    </view>
  </view>

  <!--插入图片-->
  <view class="Img" style="display:none">
    <view class="pic">
      <view class="pict">
        <image src="../../images/fatie/03.png" mode="widthFix"></image>
