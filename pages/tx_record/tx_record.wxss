/* pages/tx_record/tx_record.wxss */
page{
    padding-bottom:40rpx;
    box-sizing:border-box;
}
.r_title{
    width:100%;
    height: 80rpx;
    padding:0 30rpx;
    box-sizing:border-box;
    overflow: auto;
}
.tx_t{
    color:#999;
    font-size: 26rpx;
    float: left;
    line-height: 80rpx;
}
.r1,.rl1{
    width:30%;
}
.r2,.rl2{
    width:30%;
}
.r3,.rl3{
    width:40%;
}
.r_list{
    width:100%;
    height:auto;
    background-color: #fff;
    overflow: auto;
    border-bottom:1rpx solid #eee;
}
.r_list:last-child{
    border:none;
}
.rl{
    float: left;
    padding:34rpx 30rpx;
    box-sizing:border-box;
    
    font-size: 28rpx;
    color:#333;
}
.rl.rl2{
    color:#fe7a7a;
}