/* pages/edit/edit.wxss */
.e_tips{
    font-size: 26rpx;
    color:#999;
    height:80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #fff2cb;
}
.ed_con{
    width:100%;
    height: auto;
    background-color: #fff;
    padding-left: 30rpx;
    box-sizing:border-box;
    margin-top: 30rpx;
}
.ed_list{
    width:100%;
    height: auto;
    padding:26rpx 0;
    padding-right: 30rpx;
    box-sizing:border-box;
    align-items: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    border-bottom:1rpx solid #eee;
}
.ed_left{
    webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    font-size: 32rpx;
    color:#333;
}
.ed_img{
    display: inline-block;
    width:90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
}
.ed_input{
    width:400rpx;
    text-align: right;
    font-family: "微软雅黑";
    font-size: 28rpx;
}
.ed_list:last-child{
    border:none;
}
.but{
    width:100%;
    margin-top: 40rpx;
    padding:0 30rpx;
    box-sizing:border-box;
}
.butIn{
    width:100%;
    height: 90rpx;
    background-color: #fe7a7a;
    border-radius: 10rpx;
    overflow: hidden;
    text-align: center;
    line-height: 90rpx;
    color:#fff;
    font-size: 32rpx;
}